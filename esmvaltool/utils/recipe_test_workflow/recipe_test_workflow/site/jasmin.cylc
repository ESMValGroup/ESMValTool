#!jinja2
[runtime]
    [[COMPUTE]]
        platform = lotus
        [[[directives]]]
            --wckey = RTW
            --ntasks = 1

    [[build_container]]
        execution time limit = PT1H
        [[[directives]]]
            --mem = 2G

    [[process<fast>]]
        execution time limit = PT2M
        [[[directives]]]
            --mem = 2G

    [[process<medium>]]
        execution time limit = PT6M
        [[[directives]]]
            --mem = 2G
