#!jinja2
[runtime]
    [[root]]
        [[[environment]]]
            # Warning: fragile assumption of location of esmvaltool code, see #TODO raise issue
            ESMVALTOOL_DIR = /opt/conda/envs/esmvaltool/lib/python3.11/site-packages
            
    [[COMPUTE]]
        platform = lotus
        [[[directives]]]
            --wckey = RTW
            --ntasks = 1

    [[build_container]]
        execution time limit = PT30M
        [[[directives]]]
            --mem = 2G

    [[configure]]
        execution time limit = PT2M
        [[[directives]]]
            --mem = 2G

    [[process<fast>]]
        execution time limit = PT5M
        [[[directives]]]
            --mem = 2G

    [[process<medium>]]
        execution time limit = PT10M
        [[[directives]]]
            --mem = 2G
