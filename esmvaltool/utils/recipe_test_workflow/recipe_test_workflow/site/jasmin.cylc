#!jinja2
[runtime]
    [[COMPUTE]]
        platform = lotus
        [[[directives]]]
            --wckey = RTW
            --ntasks = 1

    #TODO explore inheriting fast/slow into flow.cylc instead of defining build and config here
    [[build_container]]
        execution time limit = PT30M
        [[[directives]]]
            --mem = 2G

    [[configure]]
        execution time limit = PT2M
        [[[directives]]]
            --mem = 2G

    [[process<fast>]]
        execution time limit = PT5M
        [[[directives]]]
            --mem = 2G

    [[process<medium>]]
        execution time limit = PT10M
        [[[directives]]]
            --mem = 2G
