<GLOBAL>
    <write_plots type="boolean">              True         </write_plots>
    <write_netcdf type="boolean">             True         </write_netcdf>
    <force_processing type="boolean">        False         </force_processing>
    <wrk_dir type="path">                    @{WORKPATH}   </wrk_dir>
    <plot_dir type="path">                   @{PLOTPATH}   </plot_dir>
    <climo_dir type="path">                  @{CLIMOPATH}  </climo_dir>
    <write_plot_vars type="boolean">          True         </write_plot_vars>
    <max_data_filesize type="integer">         100         </max_data_filesize>
    <max_data_blocksize type="integer">        500         </max_data_blocksize>
    <verbosity  type="integer">                  1         </verbosity>
    <exit_on_warning  type="boolean">        False         </exit_on_warning>
    <output_file_type>                          ps         </output_file_type>
    <force_calc type="boolean">              False         </force_calc>
    <force_gradecalc type="boolean">         False         </force_gradecalc>
    <force_taylorcalc type="boolean">        False         </force_taylorcalc>
</GLOBAL>

<MODELS>

<!-- ### DEFINED BELOW  ######################################################################## -->

</MODELS>

<DIAGNOSTICS>

<!-- ### USE CASE 1: ta to be extracted at 850 hPa ############################################# -->

    <diag>
        <description> Dummy diagnositc                         </description>
        <variable_def_dir>               ./variable_defs/      </variable_def_dir>
        <variable>                        ta                   </variable>
        <field_type>                      T3M                  </field_type>
        <diag_script cfg="none_yet.py">   dummy_python.py      </diag_script>

        <model>  CMIP5_ETHZ  bcc-csm1-1          Amon  historical   r1i1p1  2000 2002  @{MODELPATH}/ETHZ_CMIP5/ </model>
        <model>  CMIP5_ETHZ  CMCC-CESM           Amon  historical   r1i1p1  2000 2002  @{MODELPATH}/ETHZ_CMIP5/ </model>
        <model>  CMIP5_ETHZ  GFDL-ESM2G          Amon  historical   r1i1p1  2000 2002  @{MODELPATH}/ETHZ_CMIP5/ </model>

        <launcher_arguments>    [('execute_as_shell', False)]  </launcher_arguments>
    </diag>


<!-- ### USE CASE 2: toz as derived variable from tro3 and ps (see variable_defs/toz.ncl) ###### -->

<!-- MIROC-ESM requires a fix-file (see reformat_scripts/fixes/CMIP5_MIROC-ESM_fix.ncl -->

    <diag>
        <description> Dummy diagnositc                         </description>
        <variable_def_dir>               ./variable_defs/      </variable_def_dir>
        <variable>                        toz                  </variable>
        <field_type>                      T2Ms                 </field_type>
        <diag_script cfg="none_yet.py">   dummy_python.py      </diag_script>

        <model>  CMIP5_ETHZ  GFDL-ESM2G          Amon  historical   r1i1p1  2000 2002  @{MODELPATH}/ETHZ_CMIP5/ </model>
        <model>  CMIP5_ETHZ  MIROC-ESM           Amon  historical   r1i1p1  2000 2002  @{MODELPATH}/ETHZ_CMIP5/ </model>
        <model>  CMIP5_ETHZ  MIROC5              Amon  historical   r1i1p1  2000 2002  @{MODELPATH}/ETHZ_CMIP5/ </model>

        <launcher_arguments>    [('execute_as_shell', False)]  </launcher_arguments>
    </diag>


<!-- ### USE CASE 3: sic on irregular grid ##################################################### -->

<!-- EC-EARTH requires a fix-file (see reformat_scripts/fixes/CMIP5_EC-EARTH_fix.ncl -->

    <diag>
        <description> Dummy diagnositc                         </description>
        <variable_def_dir>               ./variable_defs/      </variable_def_dir>
        <variable>                        sic                  </variable>
        <field_type>                      T2Ms                 </field_type>
        <diag_script cfg="none_yet.py">   dummy_python.py      </diag_script>

        <model>  CMIP5_ETHZ  EC-EARTH           OImon  historical   r1i1p1  2000 2002  @{MODELPATH}/ETHZ_CMIP5/ </model>
        <model>  CMIP5_ETHZ  HadCM3             OImon  historical   r1i1p1  2000 2002  @{MODELPATH}/ETHZ_CMIP5/ </model>
        <model>  CMIP5_ETHZ  MRI-ESM1           OImon  historical   r1i1p1  2000 2002  @{MODELPATH}/ETHZ_CMIP5/ </model>

        <launcher_arguments>    [('execute_as_shell', False)]  </launcher_arguments>
    </diag>


</DIAGNOSTICS>

</namelist>
