<namelist>
<namelist_summary>
========================================================================
DESCRIPTION: A test namelist while implementing an R interface to the
             ESMValTool (Mantis issue #10890)

AUTHORS: Martin Evaldsson (Martin.Evaldsson@smhi.se)

NOTES: This namelist is part of the ESMValTool
       ESMValTool PIs EMBRACE: Klaus Wyser (SMHI, Sweden),
                               Veronika Eyring  (DLR, Germany)
========================================================================
</namelist_summary>
<GLOBAL>
    <write_plots type="boolean">                  True      </write_plots>
    <write_netcdf type="boolean">                 True      </write_netcdf>
    <force_processing type="boolean">            False      </force_processing>
    <wrk_dir type="path">                         work/     </wrk_dir>
    <plot_dir type="path">              work/plots_SPI/     </plot_dir>
    <climo_dir type="path">             work/climo_SPI/     </climo_dir>
    <write_plot_vars type="boolean">              True      </write_plot_vars>
    <max_data_filesize type="integer">             100      </max_data_filesize>
    <max_data_blocksize type="integer">            500      </max_data_blocksize>
    <verbosity  type="integer">                      2      </verbosity>
    <exit_on_warning  type="boolean">             True      </exit_on_warning>
    <output_file_type>                             png      </output_file_type>

    <r_pre_launch>      eval $(/usr/libexec/cmod sh add R/2.15.3-i1214);   </r_pre_launch>
</GLOBAL>

<MODELS>
    <model> CMIP5  GPCC6-2deg   Amon          obs  r1i1p1  1901 2004   ./  </model>
    <model> CMIP5  MPI-ESM-LR   Amon   historical  r1i1p1  1901 2004   ./  </model>
</MODELS>

<DIAGNOSTICS>
<diag>
    <description>       Standardized Precipication Index diagnostic    </description>
    <variable_def_dir>                              ./variable_defs/   </variable_def_dir>
    <variable>                                                   pr    </variable>
    <field_type>                                               T2Ms    </field_type>
    <diag_script_cfg_dir>                             ./nml/cfg_SPI/   </diag_script_cfg_dir>
    <diag_script cfg="cfg_SPI.r">                             SPI.r    </diag_script>

    <launcher_arguments>[('r_launch', ' Rscript --slave --quiet ')]</launcher_arguments>
</diag>
</DIAGNOSTICS>

</namelist>
