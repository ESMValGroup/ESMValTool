<GLOBAL>
  <wrk_dir type="path">                  ./work                  </wrk_dir>
  <plot_dir type="path">                 ./work/plots_SAMonsoon  </plot_dir>
  <climo_dir type="path">                ./work/climo_SAMonsoon  </climo_dir>
  <regridding_dir type="path">           ./work/regridding_tmp   </regridding_dir>
  <write_plot_vars type="boolean">        True                   </write_plot_vars>
  <max_data_filesize type="integer">      100                    </max_data_filesize>
  <max_data_blocksize type="integer">     500                    </max_data_blocksize>
  <verbosity  type="integer">               2                    </verbosity>
  <exit_on_warning  type="boolean">       True                   </exit_on_warning>
  <output_file_type>                      png                    </output_file_type>
  <show_debuginfo type="boolean">         False                  </show_debuginfo>
  <write_plots type="boolean">            True                   </write_plots>
  <write_netcdf type="boolean">           False                  </write_netcdf>
  <read_from_vault type="boolean">        False        </read_from_vault>
  <force_processing type="boolean">       False                  </force_processing>
</GLOBAL>

<MODELS>
    <model>  CMIP5_SMHI  HadGEM2-ES    Amon historical   r1i1p1  1998 2004 mon /nobackup/rossby15/sm_grini/Data/CMIP5 </model>
    <model>  CMIP5_SMHI  CNRM-CM5      Amon historical   r1i1p1  1998 2004 mon /nobackup/rossby15/sm_grini/Data/CMIP5 </model>
    <model>  CMIP5_SMHI  EC-EARTH      Amon historical   r2i1p1  1998 2004 mon /nobackup/rossby15/sm_grini/Data/CMIP5 </model>
    <model>  CMIP5_SMHI  EC-EARTH      Amon historical  r12i1p1  1998 2004 mon /nobackup/rossby15/sm_grini/Data/CMIP5 </model>
    <model>  CMIP5_SMHI  IPSL-CM5A-MR  Amon historical   r1i1p1  1998 2004 mon /nobackup/rossby15/sm_grini/Data/CMIP5 </model>
