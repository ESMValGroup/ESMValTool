-->
<model>  MiKlip MPI-ESM-LR Amon  historical  r4i1p1 atmos  1999  2004  /miklip/global/prod/archive/baseline0/output/MPI-M/  </model>

</MODELS>

<!-- Please do not change anything below this line, 
     unless you want to modify the standard diagnostic settings. -->
<DIAGNOSTICS>
    <diag>
        <description> Tutorial diagnostic used in the doc/toy-diagnostic-tutorial.pdf </description>
        <variable_def_dir>                ./variable_defs/   </variable_def_dir>
        <variable>                          MyVar            </variable>
        <field_type>                        T3M              </field_type>
        <diag_script_cfg_dir>             ./nml/cfg_MyDiag/  </diag_script_cfg_dir>

        <diag_script cfg="cfg_MyDiag.ncl">      MyDiag.ncl       </diag_script>
    </diag>
</DIAGNOSTICS>

</namelist>
