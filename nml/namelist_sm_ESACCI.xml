<GLOBAL>
  <write_plots type="boolean">        True                      </write_plots>
  <write_netcdf type="boolean">       True                      </write_netcdf>
  <force_processing type="boolean">   False                     </force_processing>
  <wrk_dir type="path">               @{WORKPATH}               </wrk_dir>
  <plot_dir type="path">              @{PLOTPATH}/sm/     			 </plot_dir>
  <climo_dir type="path">             @{CLIMOPATH}       		 </climo_dir>
  <write_plot_vars type="boolean">    True                      </write_plot_vars>
  <max_data_filesize type="integer">  100                       </max_data_filesize>
  <max_data_blocksize type="integer"> 500                       </max_data_blocksize>
  <output_file_type>                  png                       </output_file_type>
  <verbosity  type="integer">         1                         </verbosity>
  <debuginfo type="boolean">          False                     </debuginfo>
  <exit_on_warning  type="boolean">   True                      </exit_on_warning>
  <tags>                              P_cmug       				 </tags>
</GLOBAL>


<MODELS>
  <model> CMIP5 		IPSL-CM5A-MR 			MIP_VAR_DEF 	  historical 			r1i1p1 1988 2005  @{MODELPATH} </model>
  <model> CMIP5 		CNRM-CM5 				MIP_VAR_DEF 	  historical 			r1i1p1 1988 2005  @{MODELPATH} </model>
  <model> OBS        ESACCI-SOILMOISTURE 	sat     	 		  L3S-SSMV-COMBINED  		 1988 2005  @{OBSPATH}  </model>
  <!--        <model> CMIP5 IPSL-CM5A-MR Lmon historical r1i1p1 1850 2005  /media/bmueller/Work/ESMVAL_res/work/CMIP5 </model> -->
  <!--        <model> CMIP5 IPSL-CM5A-MR Lmon historical r1i1p1 1850 2005  /media/bmueller/Work/ESMVAL_res/work/CMIP5 </model> -->
</MODELS>


<DIAGNOSTICS>


    <diag>
        <description>  															Doing ESACCI soil moisture analysis. 		</description>
        <variable_def_dir>                								./variable_defs/      							</variable_def_dir>
        <variable ref_model="ESACCI-SOILMOISTURE" MIP="Lmon">     sm                                        </variable>
        <variable exclude="ESACCI-SOILMOISTURE" MIP="Amon">    	pr                                        </variable>
        <field_type>                      								T2Ms                                      </field_type>
        <diag_script cfg="./nml/cfg_ESACCI/cfg_sm_ESACCI.py">   	sm_ESACCI.py                    				</diag_script>
        <launcher_arguments>               								[('execute_as_shell', False)]             </launcher_arguments>
      
      <tags> R_atmos, R_land, T_phys, E_esacci-sm  </tags>
    </diag>

</DIAGNOSTICS>

</namelist>
