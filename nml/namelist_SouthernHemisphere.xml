<namelist>
<namelist_summary>
###############################################################################
namelist_SouthernHemisphere.xml

Description
Namelist for the diagnostics of Southern Hemisphere clouds, radiation and fluxes

Author
Jarmo Makela (FMI, Finland, jarmo.makela@fmi.fi)

Contributors
Martin Evaldsson (SMHI, Sweden, martin.evaldsson@smhi.se)
Ralf Doescher (SMHI, Sweden ralf.doescher@smhi.se)
Colin Jones (MetOffice, UK, colin.jones@metoffice.gov.uk)
Ulrika Willen (SMHI, Sweden, ulrika.willen@smhi.se)

Project
EMBRACE

Reference
n/a

This namelist is part of the ESMVal tool
###############################################################################
</namelist_summary>

<GLOBAL>
  <write_plots type="boolean">        True                      </write_plots>
  <write_netcdf type="boolean">       True                      </write_netcdf>
  <force_processing type="boolean">   False                     </force_processing>
  <wrk_dir type="path">               ./work                    </wrk_dir>
  <plot_dir type="path">              ./work/output_plots_directory/     </plot_dir>
  <climo_dir type="path">             ./work/climo              </climo_dir>
  <write_plot_vars type="boolean">    True                      </write_plot_vars>
  <max_data_filesize type="integer">  100                       </max_data_filesize>
  <max_data_blocksize type="integer"> 500                       </max_data_blocksize>
  <output_file_type>                  png                        </output_file_type>
  <verbosity  type="integer">         1                         </verbosity>
  <tags>                             P_emrace                  </tags>
</GLOBAL>


<MODELS>
  <!-- Put here all the models you want to analyze, but only those models
  used by the entire Southern Hemisphere diagnostics. You'll have to add
  the rest of the models to diagnostic specific sections below. -->
</MODELS>


<DIAGNOSTICS>

  <diag> <!-- RADIATION -->
    <description>  Diagnostics for Southern Hemisphere radiation  </description>
    <variable_def_dir>     ./variable_defs/                       </variable_def_dir>
    <variable>             rlut                                   </variable>
    <variable>             rlutcs                                 </variable>
    <variable>             rsut                                   </variable>
    <variable>             rsutcs                                 </variable>
    <variable>             rlds                                   </variable>
    <variable>             rldscs                                 </variable>
    <variable>             rsds                                   </variable>
    <variable>             rsdscs                                 </variable>
    <field_type>           T2Ms                                   </field_type>
    <tags>                 R_atmos, T_phys                        </tags>
	    
    <diag_script_cfg_dir>  ./nml/cfg_SouthernHemisphere                 </diag_script_cfg_dir>
    <diag_script cfg="SouthernHemisphere.conf">   SouthernHemisphere.py </diag_script>
    <launcher_arguments>    [('execute_as_shell', False)]               </launcher_arguments>

    <!-- Radiation diagnostic specific models, remember to tag your observations -->
    <model> CMIP5 HadGEM2-ES Amon historical r1i1p1 2000 2005 
    /home/makelaj/data/ESM-ValTool </model>

    <model> CMIP5 MPI-ESM-LR Amon historical r1i1p1 2000 2005 
    /home/makelaj/data/ESM-ValTool </model>

    <model> CMIP5 NorESM1-M Amon historical r1i1p1 2000 2005 
    /home/makelaj/data/ESM-ValTool </model>

    <model id="obs"> CMIP5 CERES-EBAF-L3B-Ed2 Amon observation r1i1p1 2000 2005 
    /home/makelaj/data/ESM-ValTool  </model>
  </diag>


  <diag> <!-- FLUXES -->
    <description>  Diagnostics for Southern Hemisphere fluxes  </description>
    <variable_def_dir>     ./variable_defs/                    </variable_def_dir>
    <variable>             hfls                                </variable>
    <variable>             hfss                                </variable>
    <field_type>           T2Ms                                </field_type>
    <tags>                 R_atmos, T_phys                     </tags>
	  
    <diag_script_cfg_dir>  ./nml/cfg_SouthernHemisphere                 </diag_script_cfg_dir>
    <diag_script cfg="SouthernHemisphere.conf">   SouthernHemisphere.py </diag_script>
    <launcher_arguments>    [('execute_as_shell', False)]               </launcher_arguments>

    <!-- Turbulent fluxes specific models, remember to tag your observations -->
    <model> CMIP5 CanESM2 Amon historical r1i1p1 2000 2005 
    /home/makelaj/data/ESM-ValTool </model>

    <model> CMIP5 MPI-ESM-MR Amon historical r1i1p1 2000 2005 
    /home/makelaj/data/ESM-ValTool </model>

    <model id="obs"> CMIP5 WHOI-OAFlux Amon obs r1i1p1 2000 2005 
    /home/makelaj/data/ESM-ValTool  </model>
  </diag>


  <diag> <!-- TOTAL CLOUD COVER -->
    <description>  Diagnostics for Southern Hemisphere cloud cover  </description>
    <variable_def_dir>     ./variable_defs/                         </variable_def_dir>
    <variable>             clt                                      </variable>
    <field_type>           T2Ms                                     </field_type>
    <tags>                 R_atmos, T_clouds                        </tags>
	  
    <diag_script_cfg_dir>  ./nml/cfg_SouthernHemisphere                 </diag_script_cfg_dir>
    <diag_script cfg="SouthernHemisphere.conf">   SouthernHemisphere.py </diag_script>
    <launcher_arguments>    [('execute_as_shell', False)]               </launcher_arguments>

    <!-- Total cloud cover specific models, remember to tag your observations -->
    <model> CMIP5 CanESM2 Amon historical r1i1p1 2000 2005 
    /home/makelaj/data/ESM-ValTool </model>

    <model> CMIP5 GFDL-ESM2G Amon historical r1i1p1 2000 2005 
    /home/makelaj/data/ESM-ValTool  </model>

    <model id="obs"> CMIP5 CloudSat-L3 Amon obs4MIPs v2.0 2000 2005 
    /home/makelaj/data/ESM-ValTool  </model>
  </diag>

  <diag>
    <description>  Diagnostics for Southern Hemisphere liquid water path </description>
    <variable_def_dir>     ./variable_defs/                  </variable_def_dir>
    <variable>             clivi                             </variable>
    <field_type>           T2Ms                              </field_type>
    <tags>                 R_atmos, T_clouds                 </tags>
	  
    <diag_script_cfg_dir>  ./nml/cfg_SouthernHemisphere                 </diag_script_cfg_dir>
    <diag_script cfg="SouthernHemisphere.conf">   SouthernHemisphere.py </diag_script>
    <launcher_arguments>    [('execute_as_shell', False)]               </launcher_arguments>

    <model> CMIP5 CanESM2 Amon historical r1i1p1 2000 2005 
    /home/makelaj/data/ESM-ValTool </model>

    <model> CMIP5 GFDL-ESM2G Amon historical r1i1p1 2000 2005 
    /home/makelaj/data/ESM-ValTool  </model>

    <model id="obs"> CMIP5 ERA-Interim Amon reanalysis r1i1p1 2000 2005 
    /home/makelaj/data/ESM-ValTool  </model>
  </diag>


  <diag>
    <description>  Diagnostics for Southern Hemisphere ice water path </description>
    <variable_def_dir>     ./variable_defs/                 </variable_def_dir>
    <variable>             clwvi                            </variable>
    <field_type>           T2Ms                             </field_type>
    <tags>                 R_atmos, T_clouds                </tags>
	  
    <diag_script_cfg_dir>  ./nml/cfg_SouthernHemisphere                 </diag_script_cfg_dir>
    <diag_script cfg="SouthernHemisphere.conf">   SouthernHemisphere.py </diag_script>
    <launcher_arguments>    [('execute_as_shell', False)]               </launcher_arguments>

    <model> CMIP5 CanESM2 Amon historical r1i1p1 2000 2005 
    /home/makelaj/data/ESM-ValTool </model>

    <model> CMIP5 GFDL-ESM2G Amon historical r1i1p1 2000 2005 
    /home/makelaj/data/ESM-ValTool  </model>

    <model id="obs"> CMIP5 ERA-Interim Amon reanalysis r1i1p1 2000 2005 
    /home/makelaj/data/ESM-ValTool  </model>
  </diag>


  <diag> <!-- TOTAL CLOUD FRACTION vs RADIATION -->
    <description>  Diagnostics for Southern Hemisphere radiation  </description>
    <variable_def_dir>        ./variable_defs/                    </variable_def_dir>
    <variable ref="clt_obs" exclude="obs">  clt               </variable>
    <variable ref="obs" exclude="clt_obs">  rlut              </variable>
    <variable ref="obs" exclude="clt_obs">  rsut              </variable>
    <variable ref="obs" exclude="clt_obs">  rlds              </variable>
    <variable ref="obs" exclude="clt_obs">  rsds              </variable>
    <field_type>                            T2Ms              </field_type>
    <tags>                 R_atmos, T_phys                    </tags>
	  
    <diag_script_cfg_dir>  ./nml/cfg_SouthernHemisphere                 </diag_script_cfg_dir>
    <diag_script cfg="SouthernHemisphere.conf">   SouthernHemisphere_scatter.py </diag_script>
    <launcher_arguments>    [('execute_as_shell', False)]               </launcher_arguments>

    <!-- Total cloud fraction vs Radiation diagnostic specific models,
	 remember to tag your observations -->
    <model> CMIP5 CanESM2 Amon historical r1i1p1 2003 2005 
    /home/makelaj/data/ESM-ValTool </model>

    <model id="clt_obs"> CMIP5 CloudSat-L3 Amon obs4MIPs v2.0 2007 2010 
    /home/makelaj/data/ESM-ValTool  </model>

    <model id="obs"> CMIP5 CERES-EBAF-L3B-Ed2 Amon observation r1i1p1 2001 2005 
    /home/makelaj/data/ESM-ValTool  </model>
  </diag>


</DIAGNOSTICS>
</namelist>
