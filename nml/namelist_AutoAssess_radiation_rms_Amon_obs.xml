        <field_type>          T2Ms               </field_type>
        <model id="obs"> obs4mips CERES-EBAF L3B Ed2-7 2001 2012 @{OBSPATH}/Tier1/ </model>
        <model id="obs"> OBS CERES-SYN1deg comp Ed3A   2001 2015 @{OBSPATH}/Tier2/CERES-SYN1deg/ </model>
        <diag_script_cfg_dir> ./nml/cfg_AutoAssess  </diag_script_cfg_dir>
        <diag_script cfg="AutoAssess_radiation_rms.conf"> AutoAssess_radiation_rms.py </diag_script>
