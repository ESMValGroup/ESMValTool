<GLOBAL>
    <write_plots type="boolean">          False      </write_plots>
    <write_netcdf type="boolean">         False      </write_netcdf>
    <force_processing type="boolean">     False      </force_processing>
    <wrk_dir type="path">              @{WORKPATH}  </wrk_dir>
    <plot_dir type="path">             @{PLOTPATH}  </plot_dir>
    <climo_dir type="path">           @{CLIMOPATH}  </climo_dir>
    <write_plot_vars type="boolean">       True      </write_plot_vars>
    <max_data_filesize type="integer">      100      </max_data_filesize>
    <max_data_blocksize type="integer">     500      </max_data_blocksize>
    <output_file_type>                      png      </output_file_type>
    <verbosity  type="integer">               1      </verbosity>
    <tags> P_cmug </tags>
</GLOBAL>

<!--
 -->

[
<MODELS>
  <!-- Put here all the models you want to analyze but only those models
  used my the entire AutoAssess Radiation cfMon diagnostics. You will have to use 
  another script for Amon, or add the rest of the models to diagnostic specific sections below. -->
<!--    <model> CMIP5_ETHZ MPI-ESM-LR cfMon amip r1i1p1 1985 2007 @{MODELPATH}/ETHZ_CMIP5/ </model>
    <model> CMIP5_ETHZ HadGEM2-A  cfMon amip r1i1p1 1985 2007 @{MODELPATH}/ETHZ_CMIP5/ </model>-->
    <model> CMIP5_ETHZ MRI-CGCM3 cfMon amip r1i1p1 1985 1988 @{MODELPATH}/ETHZ_CMIP5/ </model>
    <model> CMIP5_ETHZ HadGEM2-A cfMon amip r1i1p1 1985 1988 @{MODELPATH}/ETHZ_CMIP5/ </model>
    <model id="obs"> obs4mips ISCCP L3 V1.0 1985 1988 @{OBSPATH}/Tier1 </model>
</MODELS>


<DIAGNOSTICS>

<!-- ***********************************************************************
     * Low-intermediate
     *********************************************************************** -->
