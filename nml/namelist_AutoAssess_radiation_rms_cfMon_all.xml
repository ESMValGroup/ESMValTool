        <description> Low-intermediate Cloud </description>
        <variable_def_dir>    ./variable_defs/   </variable_def_dir>
        <variable>            cllmtisccp           </variable>
        <field_type>          T4M               </field_type>

        <diag_script_cfg_dir> ./nml/cfg_AutoAssess  </diag_script_cfg_dir>
        <diag_script cfg="AutoAssess_radiation_rms.conf"> AutoAssess_radiation_rms.py </diag_script>
