<namelist>
<!--
<include href="./config_private.xml"/>
-->
<namelist_summary>
###############################################################################
namelist_SeaIce.xml

Description
A namelist for plotting SeaIce diagnostics at the Arctic and Antarctic

Author
Daniel Senftleben (DLR, Germany - Daniel.Senftleben@dlr.de)

Contributor
Melanie Braeu (DLR, Germany)
Klaus-Dirk Gottschaldt (DLR, Germany - Klaus-Dirk.Gottschaldt@dlr.de)

Project
ESMVal

Reference
Stroeve, J. et al., Geophys. Res. Lett., 34, L09501, doi:10.1029/2007GL029703 (2007)

This namelist is part of the ESMValTool
###############################################################################
</namelist_summary>

<GLOBAL>
    <write_plots type="boolean">              True        </write_plots>
    <write_netcdf type="boolean">             True        </write_netcdf>
    <force_processing type="boolean">        False        </force_processing>
    <wrk_dir type="path">                    @{WORKPATH}  </wrk_dir>
    <plot_dir type="path">                   @{PLOTPATH}  </plot_dir>
    <climo_dir type="path">                  @{CLIMOPATH} </climo_dir>
    <write_plot_vars type="boolean">          True        </write_plot_vars>
    <max_data_filesize type="integer">         100        </max_data_filesize>
    <max_data_blocksize type="integer">        500        </max_data_blocksize>
    <verbosity  type="integer">                  1        </verbosity>
    <exit_on_warning  type="boolean">        False        </exit_on_warning>
    <output_file_type>                          ps        </output_file_type>
</GLOBAL>

<MODELS>
    <model>  CMIP5_ETHZ  ACCESS1-0         OImon  historical  r1i1p1  1960  2005  @{MODELPATH}  </model>

    <model>  CMIP5_ETHZ  ACCESS1-3         OImon  historical  r1i1p1  1960  2005  @{MODELPATH}  </model>
    <model>  CMIP5_ETHZ  ACCESS1-3         OImon  historical  r2i1p1  1960  2005  @{MODELPATH}  </model>
    <model>  CMIP5_ETHZ  ACCESS1-3         OImon  historical  r3i1p1  1960  2005  @{MODELPATH}  </model>

    <model>  CMIP5_ETHZ  bcc-csm1-1        OImon  historical  r1i1p1  1960  2005  @{MODELPATH}  </model>
    <model>  CMIP5_ETHZ  bcc-csm1-1        OImon  historical  r2i1p1  1960  2005  @{MODELPATH}  </model>
    <model>  CMIP5_ETHZ  bcc-csm1-1        OImon  historical  r3i1p1  1960  2005  @{MODELPATH}  </model>

    <model>  CMIP5_ETHZ  bcc-csm1-1-m      OImon  historical  r1i1p1  1960  2005  @{MODELPATH}  </model>
    <model>  CMIP5_ETHZ  bcc-csm1-1-m      OImon  historical  r2i1p1  1960  2005  @{MODELPATH}  </model>
    <model>  CMIP5_ETHZ  bcc-csm1-1-m      OImon  historical  r3i1p1  1960  2005  @{MODELPATH}  </model>

    <model>  CMIP5_ETHZ  BNU-ESM           OImon  historical  r1i1p1  1960  2005  @{MODELPATH}  </model>

    <model>  CMIP5_ETHZ  CanESM2           OImon  historical  r1i1p1  1960  2005  @{MODELPATH} </model>
    <model>  CMIP5_ETHZ  CanESM2           OImon  historical  r2i1p1  1960  2005  @{MODELPATH}  </model>
    <model>  CMIP5_ETHZ  CanESM2           OImon  historical  r3i1p1  1960  2005  @{MODELPATH}  </model>
    <model>  CMIP5_ETHZ  CanESM2           OImon  historical  r4i1p1  1960  2005  @{MODELPATH}  </model>
    <model>  CMIP5_ETHZ  CanESM2           OImon  historical  r5i1p1  1960  2005  @{MODELPATH}  </model>

    <model>  OBS         HadISST                  reanaly   20130524  1960  2005  @{MODELPATH}       </model>
</MODELS>

<DIAGNOSTICS>
<diag>
    <description> Set of NH sic timeline, contour and difference plots </description>
    <variable_def_dir>                 ./variable_defs/            </variable_def_dir>
    <variable>                          sic                        </variable>
    <field_type>                        T2Ms                       </field_type>
    <diag_script_cfg_dir>              ./nml/cfg_SeaIce/           </diag_script_cfg_dir>

    <model>  OBS_gridfile  NSIDC-NT  sat       NH        1979  2005  @{MODELPATH} @{DATAFILE}  </model>
    <model>  OBS_gridfile  NSIDC-BT  sat       NH        1979  2005  @{MODELPATH} @{DATAFILE}  </model>

    <diag_script cfg="cfg_SeaIce_NH.ncl">  SeaIce_tsline.ncl       </diag_script>
    <diag_script cfg="cfg_SeaIce_NH.ncl">  SeaIce_ancyc.ncl        </diag_script>
    <diag_script cfg="cfg_SeaIce_NH.ncl">  SeaIce_polcon.ncl       </diag_script>
    <diag_script cfg="cfg_SeaIce_NH.ncl">  SeaIce_polcon_diff.ncl  </diag_script>
</diag>


<diag>
    <description> Set of SH sic timeline, contour and difference plots </description>
    <variable_def_dir>                 ./variable_defs/            </variable_def_dir>
    <variable>                          sic                        </variable>
    <field_type>                        T2Ms                       </field_type>
    <diag_script_cfg_dir>              ./nml/cfg_SeaIce/           </diag_script_cfg_dir>

    <model>  OBS_gridfile  NSIDC-NT  sat       SH        1979  2005  @{MODELPATH}    @{DATAFILE}  </model>
    <model>  OBS_gridfile  NSIDC-BT  sat       SH        1979  2005  @{MODELPATH}    @{DATAFILE}  </model>

    <diag_script cfg="cfg_SeaIce_SH.ncl">  SeaIce_tsline.ncl       </diag_script>
    <diag_script cfg="cfg_SeaIce_SH.ncl">  SeaIce_ancyc.ncl        </diag_script>
    <diag_script cfg="cfg_SeaIce_SH.ncl">  SeaIce_polcon.ncl       </diag_script>
    <diag_script cfg="cfg_SeaIce_SH.ncl">  SeaIce_polcon_diff.ncl  </diag_script>
</diag>
</DIAGNOSTICS>

</namelist>
